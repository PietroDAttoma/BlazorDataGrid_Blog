@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveServer" />

<!-- 🔔 Componente notifiche Radzen -->
<RadzenNotification />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row slim-bar px-4">
            <a href="https://github.com/radzenhq/radzen-blazor" target="_blank">Radzen Blazor</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
